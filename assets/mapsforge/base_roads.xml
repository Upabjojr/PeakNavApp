<?xml version="1.0" encoding="UTF-8"?>
<rendertheme xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" map-background="#F8F8F8"
    map-background-outside="#DDDDDD" version="5" xmlns="http://mapsforge.org/renderTheme"
    xsi:schemaLocation="http://mapsforge.org/renderTheme https://raw.githubusercontent.com/mapsforge/mapsforge/master/resources/renderTheme.xsd">

    <stylemenu defaultlang="en" defaultvalue="1" id="menu">
        <layer enabled="true" id="viewerShowPistes">
            <name lang="de" value="Piste" />
            <name lang="en" value="Ski slopes" />
            <name lang="it" value="Piste" />
            <cat id="piste" />
        </layer>
    </stylemenu>

    <!--

    <rule e="way" k="natural" v="issea|sea">
        <area fill="#B3DDFF55" />
    </rule>


    <rule e="way" k="natural" v="nosea">
        <area fill="#F8F8F855" stroke="#F8F8F855" stroke-width="1.0" />
    </rule>
    -->

    <!-- waterbodies -->
    <rule e="any" k="*" v="*">
        <rule e="way" k="bridge" v="yes|true|viaduct|aqueduct|suspension|culvert|swing">
            <rule e="way" k="waterway" v="ditch|drain|stream">
                <line stroke="#333333" stroke-linecap="butt" stroke-width="1.6" />
                <line stroke="#EEEEEE" stroke-linecap="butt" stroke-width="1.2" />
            </rule>
            <rule e="way" k="waterway" v="canal|river">
                <line stroke="#333333" stroke-linecap="butt" stroke-width="2.0" />
                <line stroke="#EEEEEE" stroke-linecap="butt" stroke-width="1.6" />
            </rule>
        </rule>
        <rule e="way" k="waterway" v="ditch">
            <line stroke="#B3DDFF" stroke-width="0.6" />
        </rule>
        <rule e="way" k="waterway" v="drain">
            <line stroke="#B0B0B0" stroke-linecap="butt" stroke-width="0.7" />
            <line stroke="#B3DDFF" stroke-linecap="butt" stroke-width="0.5" />
        </rule>
        <rule e="way" k="waterway" v="canal">
            <line stroke="#B0B0B0" stroke-linecap="butt" stroke-width="1.1" />
            <line stroke="#B3DDFF" stroke-linecap="butt" stroke-width="0.9" />
        </rule>
        <rule e="way" k="waterway" v="stream">
            <line stroke="#B3DDFF" stroke-width="0.6" />
        </rule>
        <rule e="way" k="waterway" v="river">
            <line stroke="#B3DDFF" stroke-width="1.1" />
        </rule>
        <rule e="way" k="waterway" v="riverbank">
            <area fill="#B3DDFF" />
        </rule>
        <rule e="way" k="waterway" v="river" zoom-min="12">
            <pathText display="always" fill="#6C96E6" font-size="14" font-style="bold" k="name"
                priority="-100" stroke="#FFFFFF" stroke-width="2.0" />
        </rule>
        <rule e="way" k="waterway" v="stream|canal" zoom-min="15">
            <pathText display="always" fill="#6C96E6" font-size="12" font-style="bold" k="name"
                priority="-100" stroke="#FFFFFF" stroke-width="2.0" />
        </rule>
        <rule e="way" k="natural|landuse" v="water|reservoir|basin">
            <area fill="#B3DDFF" />
            <rule e="any" k="*" v="*" zoom-min="14">
                <caption display="always" fill="#6C96E6" font-size="12" k="name" priority="-100"
                    stroke="#FFFFFF" stroke-width="2.0" />
            </rule>
        </rule>
    </rule>

    <rule e="way" k="highway" v="path">
        <!--<lineSymbol position="center" display="always" priority="50" repeat="true"
            src="mapsforge/triangle_arrow.svg" />-->
        <line stroke="#ffaa00" stroke-width="0.7" />
        <line stroke="#663300" stroke-dasharray="4,6" stroke-width="1.0" />
        <pathText fill="#000000" font-size="3" font-style="normal" k="name" priority="38"
            stroke="#FFFFFF" stroke-width="1.0" />
        <pathText fill="#000000" font-size="3" font-style="normal" k="ref" priority="38"
            stroke="#FFFFFF" stroke-width="1.0" />
    </rule>

    <rule e="way" k="highway" v="track">
        <line stroke="#663300" stroke-width="1.4" />
        <line stroke="#ffaa00" stroke-width="0.7" />
        <pathText fill="#000000" font-size="3" font-style="normal" k="name" priority="18"
            stroke="#FFFFFF" stroke-width="1.0" />
        <pathText fill="#000000" font-size="3" font-style="normal" k="ref" priority="18"
            stroke="#FFFFFF" stroke-width="1.0" />
    </rule>

    <rule e="way" k="highway" v="unclassified|residential|service|primary|secondary|tertiary">
        <!-- <line stroke="#0000FF" stroke-dasharray="0,12,4,0" stroke-width="1.0" /> -->
        <line stroke="#000000" stroke-width="1.4" />
        <line stroke="#FFFFFF" stroke-width="0.7" />
        <pathText fill="#000000" font-size="3" font-style="normal" k="name" priority="-1"
            stroke="#FFFFFF" stroke-width="1.0" />
    </rule>

</rendertheme>